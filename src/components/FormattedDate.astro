---
interface Props {
  date: Date;
  class?: string[] | string;
}

const { date, class: className } = Astro.props;
---

<time datetime={date.toISOString()} class:list={className}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
